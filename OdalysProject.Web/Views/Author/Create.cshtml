
@{
    ViewData["Title"] = "Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Author

@using OdalysProject.Web.Models

    <div class="container-fluid">
        <br />
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
            @Html.ActionLink("Yazarlar","Index","Author")
            </li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Firstname"></label>
                    <input asp-for="Firstname" type="text" class="form-control">
                    <span asp-validation-for="Firstname" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Lastname"></label>
                    <input asp-for="Lastname" type="text" class="form-control">
                    <span asp-validation-for="Lastname" class="text-danger"></span>

                </div>
               

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nickname"></label>
                    <input asp-for="Nickname" type="text" class="form-control">
                    <span asp-validation-for="Nickname" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                </div>




            </div>

            <div class="form-group">
                <label asp-for="About"></label>
                <textarea asp-for="About" type="text" class="form-control"></textarea>
            </div>
          
            <input type="submit" class="btn btn-outline-primary" value="Oluştur"/>

            @Html.ActionLink("İptal","Index","Author",null,new {@class="btn btn-outline-danger"})

        </form>
    </div>