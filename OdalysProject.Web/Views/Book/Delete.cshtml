@model OdalysProject.Web.Models.Book
@using OdalysProject.Web.Models


@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<div class="container-fluid">
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            @Html.ActionLink("Anasayfa", "Index", "Home")
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.BookId)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Author.Firstname)</th>
                            <th>@Html.DisplayNameFor(model => model.Author.Lastname)</th>
                            <th>@Html.DisplayNameFor(model => model.Publisher.Name)</th>
                            <th>Aksiyonlar</th>




                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.BookId)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Author.Firstname)</th>
                            <th>@Html.DisplayNameFor(model => model.Author.Lastname)</th>
                            <th>@Html.DisplayNameFor(model => model.Publisher.Name)</th>
                            <th>Aksiyonlar</th>


                        </tr>
                    </tfoot>
                    <tbody>

                        <tr>
                            <td>@Model.BookId</td>
                            <td>@Model.Name</td>
                            <td>@Model.ISBN</td>
                            <td>@Model.Quantity</td>
                            <td>@Model.Category.Name</td>
                            <td>@Model.Author.Firstname</td>
                            <td>@Model.Author.Lastname</td>
                            <td>@Model.Publisher.Name</td>
                            <td>
                                <form asp-action="Delete">
                                    <input type="submit" value="Sil" class="btn btn-outline-danger" />

                                    @Html.ActionLink("İptal", "Index", "Book")
                                </form>
                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>