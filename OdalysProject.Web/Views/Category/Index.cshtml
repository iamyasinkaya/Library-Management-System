@{
    ViewData["Title"] = "Kategori";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Category>


<br />
<div class="container-fluid">

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            @Html.ActionLink("Anasayfa", "Index", "Home")
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>Aksiyonlar</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>Aksiyonlar</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>

                                <td>


                                    @Html.ActionLink("Kitaplar", "GetBooks", "Category", new { Id = item.CategoryId }, new { @class = "btn btn-outline-primary" })
                                    @Html.ActionLink("Güncelle", "Update", "Category", new { Id = item.CategoryId }, new { @class = "btn btn-outline-warning" })
                                    @Html.ActionLink("Sil", "Delete", "Category", new { Id = item.CategoryId }, new { @class = "btn btn-outline-danger" })


                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


