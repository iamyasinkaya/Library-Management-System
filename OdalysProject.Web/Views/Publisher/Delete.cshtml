@model OdalysProject.Web.Models.Publisher

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <img src="~/book/shop.png" alt="" style="width:300px" />

            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    <strong>@Model.Name</strong>
                </h5>

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Yayınevi Bilgileri</a>
                    </li>


                </ul>
            </div>
        </div>
        <form asp-action="Delete">
            <div class="col-md-2">
                <input type="submit" class="btn btn-outline-danger" name="btnAddMore" value="Kaldır" />
            </div>
        </form>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>@Html.DisplayNameFor(model => model.PublisherId)</strong>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.PublisherId</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>
                                @Html.DisplayNameFor(model => model.Name)
                            </strong>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>
                                @Html.DisplayNameFor(model => model.About)
                            </strong>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.About</p>
                        </div>
                    </div>



                </div>


            </div>
        </div>
    </div>
</div>