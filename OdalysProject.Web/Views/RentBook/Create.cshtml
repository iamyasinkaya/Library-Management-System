
@{
    ViewData["Title"] = "Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RentBook

@using OdalysProject.Web.Models

<div class="container-fluid">
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            @Html.ActionLink("Kiralık Kitap", "Index", "RentBook")
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Book" class="control-label"></label>

                @Html.DropDownListFor(m => m.BookId, (List<SelectListItem>)ViewBag.Books, new { @class = "form-control" })

                <span asp-validation-for="Book" class="text-danger"></span>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="Student" class="control-label"></label>

                @Html.DropDownListFor(m => m.StudentId, (List<SelectListItem>)ViewBag.Students, new { @class = "form-control" })

                <span asp-validation-for="Student" class="text-danger"></span>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="RentDate"></label>
                <input asp-for="RentDate" type="date" class="form-control">
                <span asp-validation-for="RentDate" class="text-danger"></span>

            </div>
        </div>
        <input type="submit" value="Oluştur" class="btn btn-outline-primary" />
        @Html.ActionLink("İptal", "Index", "RentBook", null, new { @class = "btn btn-outline-danger" })

    </form>
</div>

